{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "es2022",
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "composite": true
  },
  "include": ["src"]
}
