  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug daemon",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/daemon/cmd/main.go",
      "cwd": "${workspaceFolder}/daemon",
      "args": [
        "start",
        "-regtest",
        "-db-keep-alive",
        "-db-host=localhost",
        "-server-url=http://localhost:7081",
        "-tls-cert=./tls.cert",
        "-macaroon=./admin.macaroon",
        "-lnd-host=localhost:10001"
      ]
    }
  ]
}