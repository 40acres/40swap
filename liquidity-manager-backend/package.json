{
    "name": "@40swap/liquidity-manager-backend",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "nest build",
        "build:lnd-proto": "proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/lnd src/lnd/lnd.client.proto",
        "start": "node dist/main.js",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main.js",
        "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js --runInBand",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@40swap/shared": "file:../shared",
        "@anatine/zod-nestjs": "^2.0.3",
        "@grpc/grpc-js": "^1.11.1",
        "@grpc/proto-loader": "^0.7.13",
        "@nestjs/common": "^10.3.10",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.3.10",
        "@nestjs/platform-express": "^10.3.10",
        "@nestjs/swagger": "^8.1.1",
        "@nestjs/terminus": "^10.2.3",
        "@nestjs/typeorm": "^10.0.2",
        "decimal.js": "^10.4.3",
        "node-fetch": "^3.3.2",
        "pg": "^8.12.0",
        "prom-client": "^15.1.3",
        "ts-node": "^10.9.2",
        "typeorm": "^0.3.20",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.2",
        "@nestjs/schematics": "^10.1.3",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.1.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.1"
    }
}
